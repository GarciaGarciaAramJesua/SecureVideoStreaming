@page
@model SecureVideoStreaming.API.Pages.MyPermissionsModel
@{
    ViewData["Title"] = "Mis Permisos";
}

<div class="container-fluid py-4">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3">
                <i class="bi bi-key me-2"></i>Mis Permisos de Acceso
            </h2>
            <p class="text-muted">Gestiona tus permisos de acceso a videos cifrados</p>
        </div>
    </div>

    <!-- Mensajes de estado -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Tarjetas de Estadísticas -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total de Permisos</h6>
                            <h3 class="mb-0 text-primary">@Model.TotalPermisos</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-collection fs-3 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Permisos Activos</h6>
                            <h3 class="mb-0 text-success">@Model.PermisosActivos</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-unlock fs-3 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Próximos a Expirar</h6>
                            <h3 class="mb-0 text-warning">@Model.PermisosProximosAExpirar</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-hourglass-split fs-3 text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Permisos Expirados</h6>
                            <h3 class="mb-0 text-danger">@Model.PermisosExpirados</h3>
                        </div>
                        <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-lock fs-3 text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de Acción -->
    <div class="row mb-4">
        <div class="col-12">
            <a href="/VideoGrid" class="btn btn-primary me-2">
                <i class="bi bi-grid-3x3-gap me-1"></i>Explorar Videos
            </a>
            <a href="/Home" class="btn btn-outline-secondary">
                <i class="bi bi-house me-1"></i>Volver al Dashboard
            </a>
        </div>
    </div>

    <!-- Tabs para Permisos Activos y Expirados -->
    <ul class="nav nav-tabs" id="permissionsTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" 
                    type="button" role="tab" aria-controls="active" aria-selected="true">
                <i class="bi bi-unlock me-1"></i>Permisos Activos (@Model.PermisosActivos)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="expired-tab" data-bs-toggle="tab" data-bs-target="#expired" 
                    type="button" role="tab" aria-controls="expired" aria-selected="false">
                <i class="bi bi-lock me-1"></i>Permisos Expirados (@Model.PermisosExpirados)
            </button>
        </li>
    </ul>

    <div class="tab-content border border-top-0 p-3 bg-white" id="permissionsTabContent">
        <!-- Tab de Permisos Activos -->
        <div class="tab-pane fade show active" id="active" role="tabpanel" aria-labelledby="active-tab">
            @if (Model.ActivePermissions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" style="width: 5%">#</th>
                                <th scope="col" style="width: 30%">Video</th>
                                <th scope="col" style="width: 15%">Tipo</th>
                                <th scope="col" style="width: 15%" class="text-center">Otorgado</th>
                                <th scope="col" style="width: 15%" class="text-center">Expira</th>
                                <th scope="col" style="width: 10%" class="text-center">Accesos</th>
                                <th scope="col" style="width: 10%" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.ActivePermissions.Count; i++)
                            {
                                var permission = Model.ActivePermissions[i];
                                var daysUntilExpiration = permission.FechaExpiracion.HasValue 
                                    ? (permission.FechaExpiracion.Value - DateTime.Now).Days 
                                    : (int?)null;
                                var isExpiringSoon = daysUntilExpiration.HasValue && daysUntilExpiration.Value <= 7;
                                
                                <tr class="@(isExpiringSoon ? "table-warning" : "")">
                                    <th scope="row">@(i + 1)</th>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-camera-video-fill text-primary me-2"></i>
                                            <div>
                                                <div class="fw-semibold">@permission.TituloVideo</div>
                                                <small class="text-muted">Por: @permission.NombreOtorgante</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@permission.TipoPermiso</span>
                                    </td>
                                    <td class="text-center">
                                        <small>@permission.FechaOtorgamiento.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td class="text-center">
                                        @if (permission.FechaExpiracion.HasValue)
                                        {
                                            <small class="@(isExpiringSoon ? "text-warning fw-bold" : "")">
                                                @permission.FechaExpiracion.Value.ToString("dd/MM/yyyy")
                                                @if (isExpiringSoon)
                                                {
                                                    <br/><span class="badge bg-warning">@daysUntilExpiration días</span>
                                                }
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Permanente</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark">
                                            @permission.NumeroAccesos
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a href="/VideoPlayer?id=@permission.IdVideo" class="btn btn-sm btn-success" title="Ver Video">
                                            <i class="bi bi-play-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No tienes permisos activos</h4>
                    <p class="text-muted">Explora el catálogo de videos y solicita acceso</p>
                    <a href="/VideoGrid" class="btn btn-primary mt-3">
                        <i class="bi bi-grid-3x3-gap me-1"></i>Explorar Videos
                    </a>
                </div>
            }
        </div>

        <!-- Tab de Permisos Expirados -->
        <div class="tab-pane fade" id="expired" role="tabpanel" aria-labelledby="expired-tab">
            @if (Model.ExpiredPermissions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" style="width: 5%">#</th>
                                <th scope="col" style="width: 35%">Video</th>
                                <th scope="col" style="width: 15%">Tipo</th>
                                <th scope="col" style="width: 15%" class="text-center">Otorgado</th>
                                <th scope="col" style="width: 15%" class="text-center">Expiró/Revocado</th>
                                <th scope="col" style="width: 15%" class="text-center">Accesos Realizados</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.ExpiredPermissions.Count; i++)
                            {
                                var permission = Model.ExpiredPermissions[i];
                                
                                <tr class="table-light">
                                    <th scope="row">@(i + 1)</th>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-camera-video text-muted me-2"></i>
                                            <div>
                                                <div class="fw-semibold text-muted">@permission.TituloVideo</div>
                                                <small class="text-muted">Por: @permission.NombreOtorgante</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@permission.TipoPermiso</span>
                                    </td>
                                    <td class="text-center">
                                        <small>@permission.FechaOtorgamiento.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td class="text-center">
                                        @if (permission.FechaRevocacion.HasValue)
                                        {
                                            <small class="text-danger">
                                                <i class="bi bi-x-circle"></i> Revocado<br/>
                                                @permission.FechaRevocacion.Value.ToString("dd/MM/yyyy")
                                            </small>
                                        }
                                        else if (permission.FechaExpiracion.HasValue)
                                        {
                                            <small class="text-warning">
                                                <i class="bi bi-hourglass"></i> Expiró<br/>
                                                @permission.FechaExpiracion.Value.ToString("dd/MM/yyyy")
                                            </small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">N/A</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark">
                                            @permission.NumeroAccesos visualizaciones
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle display-1 text-success"></i>
                    <h4 class="mt-3 text-muted">No tienes permisos expirados</h4>
                    <p class="text-muted">¡Todos tus permisos están activos!</p>
                </div>
            }
        </div>
    </div>
</div>
