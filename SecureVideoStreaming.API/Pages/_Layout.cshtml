<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecureVideoStreaming</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }
        .video-card {
            transition: transform 0.2s;
        }
        .video-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="bi bi-shield-lock"></i> SecureVideoStreaming</a>
            
            @if (Context.Session.GetString("Username") != null)
            {
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Home">
                                <i class="bi bi-house"></i> Inicio
                            </a>
                        </li>
                        
                        @* Solo para Owners (Administradores) *@
                        @if (Context.Session.GetString("UserType") == "Owner")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/VideoGrid">
                                    <i class="bi bi-collection-play"></i> Galería de Videos
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/UploadVideo">
                                    <i class="bi bi-cloud-upload"></i> Subir Video
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <div class="navbar-nav ms-auto">
                        <span class="navbar-text me-3">
                            <i class="bi bi-person-circle"></i> @Context.Session.GetString("Username")
                            @if (Context.Session.GetString("UserType") == "Owner")
                            {
                                <span class="badge bg-warning text-dark">Admin</span>
                            }
                            else
                            {
                                <span class="badge bg-info">Usuario</span>
                            }
                        </span>
                        <form method="post" asp-page="/Logout" class="d-inline">
                            <button type="submit" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
